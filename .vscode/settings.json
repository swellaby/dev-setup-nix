{
  "files.exclude": {
    "**/.git": true,
    "tests/helper_libs/**": true,
  },
  "cSpell.enabled": true,
  "cSpell.ignorePaths": [
    "**/.git/**",
    ".vscode",
  ],
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "azure-pipelines",
    "html",
    "json",
    "markdown",
    "plaintext",
    "properties",
    "python",
    "restructuredtext",
    "shellscript",
    "text",
    "toml",
    "yaml"
  ],
  "cSpell.dictionaries": [
    "companies",
    "en_us",
    "filetypes",
    "misc",
    "softwareTerms"
  ],
  "files.associations": {
    "**/*.bats": "shellscript"
  }
}
